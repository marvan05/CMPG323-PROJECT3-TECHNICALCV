@model  SendMailDto
@{
    ViewData["Title"] = "Contact";
}

<h1>@ViewBag.Message</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="@Model.Name"></label>
        <input type="text" asp-for="@Model.Name" class="form-control" placeholder="Enter your name" />
        <span class="text-danger" asp-validation-for="@Model.Name"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Subject"></label>
        <input type="text" asp-for="@Model.Subject" class="form-control" placeholder="Enter your subject" />
        <span class="text-danger" asp-validation-for="@Model.Subject"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Message"></label>
        <input type="text"  asp-for="@Model.Message" class="form-control" placeholder="Enter your Message" />
        <span class="text-danger" asp-validation-for="@Model.Message"></span>
    </div>
    <button type="Submit" class="btn btn-primary">Send Mail</button>

</form>

