@model SendMailDto
@{
    ViewData["Title"] = "Contact";
}

<h1 class="text-center">Contact me</h1>
<p class="text-center">Please complete the form below and click on Submit.</p>
<p class="text-center">Alternatively, send email to 11946237@nwu.ac.za</p>

<h2>@ViewBag.Message</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="@Model.Name"></label>
        <input type="text" asp-for="@Model.Name" class="form-control" placeholder="Enter your name" />
        <span class="text-danger" asp-validation-for="@Model.Name"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Surname"></label>
        <input type="text" asp-for="@Model.Surname" class="form-control" placeholder="Enter your surname" />
        <span class="text-danger" asp-validation-for="@Model.Surname"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Email"></label>
        <input type="text" asp-for="@Model.Email" class="form-control" placeholder="Enter your email address" />
        <span class="text-danger" asp-validation-for="@Model.Email"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Phone"></label>
        <input type="text" asp-for="@Model.Phone" class="form-control" placeholder="Enter your cell phone number" />
        <span class="text-danger" asp-validation-for="@Model.Phone"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Subject"></label>
        <input type="text" asp-for="@Model.Subject" class="form-control" placeholder="Enter your subject" />
        <span class="text-danger" asp-validation-for="@Model.Subject"></span>
    </div>

    <div class="form-group">
        <label asp-for="@Model.Message"></label>
        <input type="text" asp-for="@Model.Message" class="form-control" placeholder="Enter your Message" />
        <span class="text-danger" asp-validation-for="@Model.Message"></span>
    </div>
    <button type="Submit" class="btn btn-primary">Send Mail</button>

</form>
